gem 'generator_spec'
gem 'girl_friday', '>= 0.11.1'
gem 'loofah', '~>2.19.1'
gem 'redis', '<= 3.3.5'
gem 'resque'
gem 'rspec-command'
gem 'sinatra'

gem 'nokogiri', '~> 1.6.0' if Gem::Version.new(RUBY_VERSION) <= Gem::Version.new('2.0')

gem 'simplecov', '<= 0.17.1'
gem 'sucker_punch', '~> 2.0'
gem 'webmock', :require => false

gem 'aws-sdk-sqs'

gemspec :path => '../'
